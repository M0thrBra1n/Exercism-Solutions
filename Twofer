public class Twofer {
    public static String name;
    public static String getName(String name){
        return name;
    }
    public static String twofer(String name){
        if(name == null){
        return "One for you, one for me.";
        }else{
        return String.format("One for %s, one for me.",
            getName(name));
    }
}
}
